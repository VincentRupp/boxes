<!-- Home.html -->
  	<script type="text/ng-template" id="/home.html">
      
      
      <form ng-submit="addBox()" style="margin-top:10px; margin-bottom:10px;">
        <div class="row">
          <div class="col-md-4 col-md-offset-4">
            <div class="form-group">
              <button type="submit" class="btn btn-primary">Add Box</button>
              <input type="text" class="form-control" placeholder="Value = " ng-model="value"/>
            </div>
          </div>
        </div>
      </form>

      <form ng-submit="removeBoxes()">
        <div class="row">
          <div class="col-md-4 col-md-offset-4">
            <div class="form-group">
              <button type="submit" class="btn btn-primary">Remove Boxes</button>
              <input type="text" class="form-control" placeholder="Value =" ng-model="removeVal"/>            
            </div>
          </div>
        </div>
      </form>

      <div class="container" ng-show="boxes.length==0">
        <p>There are no boxes in the database. =(</p>
      </div>
      <div class="container" ng-show="boxes.length>0">
        <div ng-repeat="box in boxes" class="box text-center">
          <a href="#/boxes/{{box._id}}">
            <p>{{box.value}}</p>
          </a>
        </div>
      </div>
  	</script>

<!-- Boxes.html -->
  	<script type="text/ng-template" id="/boxes.html">
      <div class="row text-center">
        <div class="col-md-4 col-md-offset-4">
          <div class="bigbox text-center">
            <p>{{box.value}}</p>
          </div>
        </div>
      </div>
<!-- Change value -->
      <form ng-submit="changeValue()">
        <div class="row">
          <div class="col-md-4 col-md-offset-4">
            <h3>Change Box Value</h3>
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Box Value" ng-model="newValue" />
            </div>
            <button type="submit" class="btn btn-primary">Change</button>
          </div>
        </div>
      </form>
<!-- Remove box -->
      <div class="row" style="margin-top:5px">
        <div class="col-md-4 col-md-offset-4">
          <form ng-submit="removeBox()">
            <button type="submit" class="btn btn-primary">Remove Box</button>
          </form>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 col-md-offset-4" style="margin-top:10px">
          <a href="#/home">Back to Boxes</a>
        </div>
      </div>

